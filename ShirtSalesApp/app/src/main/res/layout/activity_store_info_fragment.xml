<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:layout_above="@id/store_info_card"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"/>

    <!-- Store Information Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/store_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:background="@color/cardBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/funnycapybara"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:layout_below="@id/store_image"
                android:layout_marginTop="16dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Address"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:layout_below="@id/store_name"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/store_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Business"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:layout_below="@id/store_address"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
