<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán thành công!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin người dùng:\nTên: Nguyễn Văn A\nEmail: user@example.com\nSố điện thoại: 0123456789"
        android:textSize="18sp"
        android:layout_below="@id/tv_success_message"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_receipt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết hóa đơn:\nMã đơn hàng: 12345\nNgày: 10/06/2024\nTổng tiền: 1,000,000 VND"
        android:textSize="18sp"
        android:layout_below="@id/tv_user_details"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách sản phẩm:\n- Sản phẩm 1\n- Sản phẩm 2\n- Sản phẩm 3"
        android:layout_below="@id/tv_receipt_details"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_print_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In hóa đơn"
        android:layout_below="@id/tv_item_list"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
